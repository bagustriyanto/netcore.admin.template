<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewBag.Title</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/components.css">

    <!-- General JS Scripts -->
    <script src="~/js/app.min.js"></script>
    <script src="/shared/localization"></script>
    <script src="/shared/menu"></script>
    <script src="~/js/common.js"></script>
    <!-- /END GA -->
</head>

<body class="layout-3">
    <div id="app-main">
        <div class="main-wrapper container">
            <div class="navbar-bg navbar-fixed"></div>
            <nav id="header" class="navbar navbar-expand-lg main-navbar navbar-fixed">
                <a href="index.html" class="navbar-brand sidebar-gone-hide">Stisla</a>
                <div class="nav-collapse">
                    <a class="sidebar-gone-show nav-collapse-toggle nav-link" href="#">
                        <i class="fas fa-ellipsis-v"></i>
                    </a>
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="#menuContainer" role="button" id="main-menu"
                                data-toggle="collapse" aria-expanded="false"
                                aria-controls="menuContainer">{{$lang.lblmenu_menu}}</a>
                        </li>
                    </ul>
                </div>
                <form class="form-inline ml-auto">
                </form>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            <div class="d-sm-none d-lg-inline-block">
                                {{locale === 'en-US' ? 'English' : 'Bahasa Indonesia'}}</div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item has-icon" v-on:click.prevent="changeLang('en-US')">
                                English
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item has-icon" v-on:click.prevent="changeLang('id-ID')">
                                Bahasa Indonesia
                            </a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            <img alt="image" src="~/img/avatar/avatar-1.png" class="rounded-circle mr-1">
                            <div class="d-sm-none d-lg-inline-block">{{username}}</div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item has-icon text-danger" v-on:click.prevent="logout">
                                <i class="fas fa-sign-out-alt"></i> {{$lang.action_logout}}
                            </a>
                        </div>
                    </li>
                </ul>
            </nav>

            <div class="menu collapse" id="menuContainer">
                <div class="menu-content">
                    @await Html.PartialAsync("~/Views/Home/Menu.cshtml")
                </div>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-body">
                        @RenderBody()
                    </div>
                </section>
            </div>
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright Stisla Template &copy; 2018
                </div>
                <div class="footer-right">

                </div>
            </footer>
        </div>
    </div>

    <!-- JS Libraies -->

    <!-- Page Specific JS File -->

    <!-- Template JS File -->
    <script src="~/js/scripts.js"></script>
    <script src="~/js/apps/header.js"></script>
    <!-- <script src="~/js/custom.js"></script> -->
</body>

</html>